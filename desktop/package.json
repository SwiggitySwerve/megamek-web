{
  "name": "battletech-editor-desktop",
  "version": "1.0.0",
  "description": "BattleTech Editor - Desktop Application",
  "main": "dist/electron/main.js",
  "author": {
    "name": "SwerveLabs",
    "email": "swervelabs@proton.me"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/swervelabs/battletech-editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/swervelabs/battletech-editor.git"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "electron dist/electron/main.js",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/electron/main.js && cross-env NODE_ENV=development electron dist/electron/main.js\"",
    "dev:full": "concurrently \"npm --prefix .. run dev\" \"wait-on http://localhost:3000 && npm run dev\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --mac --win --linux",
    "clean": "rimraf dist build release",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "type-check": "tsc --noEmit",
    "icons:generate": "node scripts/generate-icons.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "build": {
    "extends": "../electron-builder.yml"
  },
  "keywords": [
    "battletech",
    "mech",
    "editor",
    "game",
    "desktop",
    "electron",
    "megamek"
  ]
}
